<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.log.presentation.controller.NewFilterController">
   <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="400.0">
      <TextField fx:id="filterNameText" alignment="TOP_CENTER" focusTraversable="false" promptText="Filter name" />
      <TextArea fx:id="filterContentText" focusTraversable="false" prefHeight="200.0" prefWidth="200.0" promptText="Filter content, separate each filter with a pipe (|)" />
      <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
         <padding>
            <Insets top="5.0" />
         </padding>
         <Button fx:id="createFilterButton" mnemonicParsing="false" onAction="#handleCreateFilterButtonClick" text="Create" />
         <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancelButtonClick" text="Cancel" />
      </HBox>
   </VBox>
</AnchorPane>
